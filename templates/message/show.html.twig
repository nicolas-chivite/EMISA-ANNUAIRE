{% extends 'base.html.twig' %}

{% block title %}Message{% endblock %}

{% block body %}
    <h1>Message</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ message.id }}</td>
            </tr>
            <tr>
                <th>Objet</th>
                <td>{{ message.object }}</td>
            </tr>
            <tr>
                <th>Expéditeur</th>
                <td>{{ message.expeditor }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ message.content }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ message.createdAt ? message.createdAt|date('d/m/Y H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_message_index') }}"><button>Retour à la liste</button></a>

    <a href="{{ path('app_message_edit', {'id': message.id}) }}"><button>Modifier</button></a>

    {{ include('message/_delete_form.html.twig') }}
{% endblock %}
