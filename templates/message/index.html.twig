{% extends 'base.html.twig' %}

{% block title %}Liste des messages{% endblock %}

{% block body %}
    <h1>Listes des messages</h1>

    <table class="table">
        <thead>
            <tr>
                {# <th>Id</th> #}
                <th>Objet</th>
                <th>Expéditeur</th>
                <th>Contenu</th>
                <th>Date de création</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for message in messages %}
            <tr>
                {# <td>{{ message.id }}</td> #}
                <td>{{ message.object }}</td>
                <td>{{ message.expeditor }}</td>
                <td>{{ message.content }}</td>
                <td>{{ message.createdAt ? message.createdAt|date('d/m/Y H:i:s') : '' }}</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="{{ path('app_message_show', {'id': message.id}) }}">Voir</a>
                    <a class="btn btn-warning btn-sm"href="{{ path('app_message_edit', {'id': message.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Pas de messages trouvés...</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <a class="btn btn-success" href="{{ path('app_message_new') }}">Créer un nouveau message</a> #}
{% endblock %}
