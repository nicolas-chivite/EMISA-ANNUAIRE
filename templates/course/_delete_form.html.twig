{% if course.id %}
<form method="post" action="{{ path('app_course_delete', {'id': course.id}) }}" onsubmit="return confirm('Etes-vous sûr de supprimer cet élément ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ course.id) }}">
    <button class="btn btn-danger my-1">Supprimer</button>
</form>
{% endif %}
