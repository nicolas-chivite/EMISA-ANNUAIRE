{% extends 'base.html.twig' %}

{% block title %}Menu{% endblock %}

{% block body %}
    <h1>Menu</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ menu.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ menu.title }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ menu.url }}</td>
            </tr>
            <tr>
                <th>En ligne</th>
                <td>{{ menu.isActive ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ menu.position }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ menu.createdAt ? menu.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date de modification</th>
                <td>{{ menu.updatedAt ? menu.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div>
        <a class="btn btn-primary" href="{{ path('app_menu_index') }}">Retour à la liste</a>
        <a class="btn btn-warning" href="{{ path('app_menu_edit', {'id': menu.id}) }}">Modifier</a>
    </div>

    {{ include('menu/_delete_form.html.twig') }}
{% endblock %}
