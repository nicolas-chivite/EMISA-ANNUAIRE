{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
    <div class="form-group mb-3">
        {{ form_label(form.title, 'Titre') }}
        {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.title) }}
    </div>

    <div class="form-group mb-3">
        {{ form_label(form.url, 'URL') }}
        {{ form_widget(form.url, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.url) }}
    </div>

        <div class="form-group mb-3">
        {{ form_label(form.isActive, 'En ligne') }}
        {{ form_widget(form.isActive, {'attr': {'type': 'checkbox'}}) }}
        {{ form_errors(form.isActive) }}
    </div>

    <div class="form-group mb-3">
        {{ form_label(form.position, 'Position') }}
        {{ form_widget(form.position, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.position) }}
    </div>

    <button type="submit" class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
    <a href="{{ path('app_user_index') }}" class="btn btn-secondary">Annuler</a>
{{ form_end(form) }}